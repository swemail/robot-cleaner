{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "build",
      "sourceMap": true,
      "sourceRoot": "/",
      "strict": true,
      "target": "es2017",
      "typeRoots": ["./types", "./node_modules/@types"],
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "allowJs": true,
      "skipLibCheck": true
    },
    "compileOnSave": true,
    "include": ["src", "types"],
    "exclude": ["**/__mocks__/*"]
  }